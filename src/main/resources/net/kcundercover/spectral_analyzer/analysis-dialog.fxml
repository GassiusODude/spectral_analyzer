<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="600.0" prefWidth="800.0" spacing="10" style="-fx-padding: 10;"
      xmlns="http://javafx.com"
      xmlns:fx="http://javafx.com"
      fx:controller="net.kcundercover.spectral_analyzer.AnalysisDialogController">

    <Label text="Signal Analysis View" style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
            <!-- Magnitude Plot-->
            <Tab text="Time Domain">
                <VBox spacing="5">
                    <StackPane fx:id="containerMagn" VBox.vgrow="ALWAYS" />
                    <Slider fx:id="alphaMagnSlider"
                        min="0" max="1.0" value="1.0"
                        showTickLabels="true" showTickMarks="true"
                        majorTickUnit="0.1"  minorTickCount="10" />
                </VBox>
            </Tab>

            <!-- Frequency PLot -->
            <Tab text="Frequency">
                <VBox spacing="5">
                    <StackPane fx:id="containerFreq" VBox.vgrow="ALWAYS" />
                    <Slider fx:id="alphaFreqSlider"
                        min="0" max="1.0" value="1.0"
                        showTickLabels="true" showTickMarks="true"
                        majorTickUnit="0.1"  minorTickCount="100" />

                </VBox>
            </Tab>

            <!-- PSD -->
            <Tab text="PWelch">
                <VBox spacing="5">
                    <StackPane fx:id="containerPSD" VBox.vgrow="ALWAYS" />
                            <!-- Instruction Bar -->
                    <HBox alignment="CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 5; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;">
                        <Label text="ðŸ–±ï¸ Click: Set Passband Level  |  Ctrl+Click: Set Noise Floor  |  Shift+Click: Set BW Cutoffs"
                            style="-fx-font-size: 11; -fx-text-fill: #555555; -fx-font-style: italic;" />
                    </HBox>
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

    <VBox spacing="10">
        <!-- Annotation Information Panel -->
        <TitledPane text="Annotation Metadata" collapsible="false">
            <GridPane hgap="15" vgap="10" style="-fx-padding: 10;">
                <columnConstraints>
                    <ColumnConstraints minWidth="80" prefWidth="100" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints minWidth="120" />
                </columnConstraints>

                <children>
                    <Label text="Label:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="txtAnnotLabel" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label text="Time Span:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <HBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <TextField fx:id="txtAnnotTime" editable="false" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnUpdateTime" text="Update Time" onAction="#handleUpdateTimeFromMarkers">
                            <tooltip>
                                <Tooltip text="Update time selected magnitude/frequency charts." />
                            </tooltip>
                        </Button>
                    </HBox>
                    <Label text="Freq Range:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <HBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <TextField fx:id="txtAnnotFreq" editable="false" HBox.hgrow="ALWAYS" />
                        <!-- Button to update freq lo/hi from current markers -->
                        <Button fx:id="btnUpdateFreq" text="Update Freqs" onAction="#handleUpdateFreqFromMarkers">
                            <tooltip>
                                <Tooltip text="Update frequency selected in PSD chart." />
                            </tooltip>
                        </Button>
                    </HBox>

                    <Label text="Comment:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <TextArea fx:id="txtAnnotComment" prefHeight="50" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </children>
            </GridPane>
        </TitledPane>

        <!-- Global Metrics & Action Buttons -->
        <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 5;">
            <CheckBox fx:id="chkIncludeMetrics"
                    text="Add SNR/Noise/Power to Comment"
                    selected="true" />

            <Region HBox.hgrow="ALWAYS" /> <!-- Pushes buttons to the right -->

            <Button text="Update" onAction="#handleUpdate" prefWidth="100"
                    style="-fx-base: #e1f5fe;">
                <tooltip>
                    <Tooltip text="Update Label and Comment" />
                </tooltip>
            </Button>
            <Button text="Close" onAction="#handleClose" prefWidth="80" />
        </HBox>
    </VBox>

</VBox>
